.swiper,
.swiper-img {
  width: 750rpx;
  height: 490rpx;
  background-color: #fd8925;
}
.ui-all {
  padding: 20rpx 40rpx;
}
.ui-all .ui-list {
  width: 100%;
  text-align: left;
  padding: 20rpx 0;
  border-bottom: solid 1px #f2f2f2;
  position: relative;
}
.ui-all .ui-list text {
  color: #4a4a4a;
  font-size: 32rpx;
  display: inline-block;
  vertical-align: middle;
  min-width: 150rpx;
}
.ui-all .ui-list input {
  color: #a8a8a8;
  font-size: 30rpx;
  display: inline-block;
  vertical-align: middle;
}
.ui-all .ui-list picker {
  width: 90%;
  color: #808080;
  font-size: 30rpx;
  display: inline-block;
  vertical-align: middle;
  position: absolute;
  top: 30rpx;
  left: 150rpx;
  font-size: 32rpx;
}
.ui-all .ui-list .arrow {
  content: '';
  width: 20rpx;
  height: 20rpx;
  border-top: solid 1px #a8a8a8;
  border-right: solid 1px #a8a8a8;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  /* IE 9 */
  -moz-transform: rotate(45deg);
  /* Firefox */
  -webkit-transform: rotate(45deg);
  /* Safari 和 Chrome */
  -o-transform: rotate(45deg);
  position: absolute;
  top: 40rpx;
  right: 0;
}
.ui-all .ui-list .list-input {
  color: #030303;
  font-size: 32rpx;
  display: inline-block;
  vertical-align: middle;
}
.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  width: 350rpx;
  height: 74rpx;
  margin-left: -175rpx;
  line-height: 74rpx;
  color: #fff;
  background-color: #fcbf67;
  text-align: center;
  border-radius: 100rpx;
  font-size: 30rpx;
}

